{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@vidyalayaone/common-middleware": ["../../packages/common-middleware/src"],
      "@vidyalayaone/common-utils": ["../../packages/common-utils/src"],
      "@vidyalayaone/logger": ["../../packages/logger/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/generated"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
